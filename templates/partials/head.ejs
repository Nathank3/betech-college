<!-- Hidden data registry to safely pass EJS data to client-side JS without causing IDE lint errors -->
<div id="course-data-registry" style="display:none" data-courses='<%- JSON.stringify(categories || {}) %>'></div>

<script>
    (function() {
        try {
            const registryEl = document.getElementById('course-data-registry');
            if (registryEl && registryEl.dataset.courses) {
                window.BETECH_COURSES = JSON.parse(registryEl.dataset.courses);
                window.COURSE_REGISTRY = Object.values(window.BETECH_COURSES).flat();
            }
        } catch (e) {
            console.error("Error parsing course data:", e);
            window.BETECH_COURSES = {};
            window.COURSE_REGISTRY = [];
        }
    })();
</script>
