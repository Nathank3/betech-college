<div id="prospectus-overlay" class="fixed inset-0 z-[60] hidden overflow-hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/80 backdrop-blur-xl transition-opacity duration-500 opacity-0" id="prospectus-backdrop"></div>
    
    <!-- Modal Container -->
    <div class="relative h-full w-full flex items-center justify-center p-4 md:p-8">
        <div 
            id="prospectus-content"
            class="w-full max-w-5xl h-[90vh] glass rounded-3xl border border-neon-text/30 shadow-[0_0_50px_rgba(0,242,255,0.1)] flex flex-col overflow-hidden translate-y-8 transition-transform duration-500 opacity-0 bg-black/40"
        >
            <!-- Header with Search -->
            <div class="p-6 md:p-10 border-b border-white/5 flex flex-col md:flex-row gap-6 items-center justify-between bg-black/20">
                <div class="flex-1 w-full">
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-5 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-neon-text group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                        <input 
                            type="text" 
                            id="prospectus-search"
                            placeholder="Search for courses (e.g. AI, Design, Web...)"
                            class="w-full bg-white/5 border border-white/10 text-white rounded-2xl py-4 pl-14 pr-20 focus:outline-none focus:border-neon-text/50 focus:ring-1 focus:ring-neon-text/50 transition-all font-medium placeholder:text-gray-600"
                        >
                        <div class="absolute inset-y-0 right-5 flex items-center pointer-events-none">
                            <span class="text-[10px] font-bold text-gray-500 border border-white/10 px-2 py-1 rounded-md bg-black/40 uppercase tracking-widest hidden md:block">
                                ESC to close
                            </span>
                        </div>
                    </div>
                </div>
                <button 
                    id="close-prospectus"
                    class="p-4 hover:bg-white/5 rounded-2xl text-gray-400 hover:text-white transition-all group"
                >
                    <svg class="w-6 h-6 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Scrollable Content Area -->
            <div id="prospectus-results" class="flex-1 overflow-y-auto p-6 md:p-10 scrollbar-hide space-y-12">
                <!-- Data will be populated here via JS -->
                <div id="default-prospectus-view">
                    <% Object.keys(categories).forEach(categoryName => { %>
                        <div class="category-block mb-12">
                            <div class="flex items-center gap-4 mb-8">
                                <h3 class="text-xl serif font-bold text-white"><%= categoryName %></h3>
                                <div class="h-[1px] flex-1 bg-gradient-to-r from-neon-text/30 to-transparent"></div>
                                <span class="text-[10px] text-gray-500 font-bold uppercase tracking-widest">
                                    <%= categories[categoryName].length %> Courses
                                </span>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <% categories[categoryName].forEach(course => { %>
                                    <div 
                                        class="glass p-5 rounded-2xl border border-white/5 hover:border-neon-text/30 transition-all group cursor-pointer"
                                        onclick="openCourseDetails('<%= course.title %>')"
                                    >
                                        <div class="flex gap-4">
                                            <div class="w-20 h-20 rounded-xl overflow-hidden shrink-0 border border-white/5 <%= course.image.endsWith('.png') ? 'bg-white/10' : '' %>">
                                                <img src="<%= course.image %>" alt="<%= course.title %>" class="w-full h-full <%= course.image.endsWith('.png') ? 'object-contain p-2' : 'object-cover' %> group-hover:scale-110 transition-transform duration-500">
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <div class="flex justify-between items-start mb-1">
                                                    <h4 class="font-bold text-white group-hover:text-neon-text transition-colors truncate"><%= course.title %></h4>
                                                    <span class="text-[8px] bg-neon-text/10 text-neon-text px-2 py-0.5 rounded-full border border-neon-text/20 uppercase font-black tracking-tighter">
                                                        <%= course.tag %>
                                                    </span>
                                                </div>
                                                <p class="text-xs text-gray-500 line-clamp-2 leading-relaxed">
                                                    <%= course.description %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                <!-- Search Results Skeleton (Hidden by default) -->
                <div id="search-prospectus-view" class="hidden">
                    <h3 class="text-sm uppercase tracking-[0.3em] font-bold text-gray-500 mb-8 flex items-center gap-3">
                        Search Results 
                        <span id="search-count" class="text-neon-text bg-neon-text/10 px-2 py-0.5 rounded text-[10px]">0</span>
                    </h3>
                    <div id="search-results-grid" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Dynamic Results -->
                    </div>
                    <div id="no-results" class="hidden text-center py-20">
                        <div class="text-4xl mb-4">üîç</div>
                        <h4 class="text-xl font-bold text-white mb-2">No courses found</h4>
                        <p class="text-gray-500 text-sm">Try searching for something else or contact us for help.</p>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="p-6 md:p-8 border-t border-white/5 bg-black/40 flex flex-col md:flex-row gap-4 items-center justify-between">
                <div class="text-xs text-gray-500">
                    <span class="text-neon-text font-bold">BETECH</span> Full Course Catalog
                </div>
                <div class="flex items-center gap-4">
                    <p class="text-xs text-gray-400 hidden sm:block">Can't find what you're looking for?</p>
                    <a 
                        href="https://wa.me/+254711514558?text=Hi, I am looking for a course not listed in your main prospectus."
                        target="_blank"
                        class="px-6 py-2 bg-neon-text/10 border border-neon-text/30 text-neon-text hover:bg-neon-text hover:text-black transition-all rounded-xl text-xs font-bold flex items-center gap-2"
                    >
                        Contact us 
