<!DOCTYPE html>
<html lang="en" class="scroll-smooth" id="top">
    <head>
        <%- include('partials/head') %>
    </head>
    <body class="overflow-x-hidden antialiased bg-white">
        
        <%- include('partials/navbar') %>

        <section class="pt-32 pb-20 bg-slate-50 min-h-screen">
            <div class="max-w-6xl mx-auto px-8 md:px-12">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
                    <!-- Left Side: Info -->
                    <div class="reveal reveal-left">
                        <span class="inline-block px-4 py-2 bg-purple-50 text-purple-700 text-xs font-semibold uppercase tracking-wider rounded-full border border-purple-100 mb-6">
                            Contact Us
                        </span>
                        <h1 class="text-4xl md:text-6xl serif font-bold mb-8 text-slate-900 leading-tight">
                            Start Your <span class="accent-text">Tech Journey</span> Today
                        </h1>
                        <p class="text-lg text-slate-600 mb-12 leading-relaxed">
                            Have questions about our courses, fees, or enrollment? Our team is here to help you navigate your future in technology.
                        </p>

                        <div class="space-y-8">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-white rounded-2xl shadow-sm border border-slate-100 flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-slate-900">Visit Us</h4>
                                    <p class="text-slate-600">Wote Town, Makueni County</p>
                                    <p class="text-slate-500 text-sm">Posta Building, Maisha Kamili Road</p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-white rounded-2xl shadow-sm border border-slate-100 flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-slate-900">Call/WhatsApp</h4>
                                    <p class="text-slate-600">0711514558 / 0746750740</p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-white rounded-2xl shadow-sm border border-slate-100 flex items-center justify-center shrink-0">
                                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-slate-900">Email Us</h4>
                                    <p class="text-slate-600">betechcollegeannex@gmail.com</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Side: Form -->
                    <div class="reveal reveal-right delay-200">
                        <div class="bg-white p-8 md:p-10 rounded-3xl border border-slate-200 shadow-xl shadow-slate-200/50">
                            <h3 class="text-2xl font-bold mb-6 text-slate-900">Send us a Message</h3>
                            <form id="contact-form" class="space-y-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-semibold text-slate-700 mb-2">Full Name</label>
                                        <input type="text" name="name" required minlength="2" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-purple-500 transition-all text-slate-900" placeholder="John Doe">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-semibold text-slate-700 mb-2">Phone Number</label>
                                        <input type="tel" name="phone" required pattern="[0-9]{10,}" title="Please enter a valid phone number (at least 10 digits)" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-purple-500 transition-all text-slate-900" placeholder="07... or +254...">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-2">Email Address</label>
                                    <input type="email" name="email" required class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-purple-500 transition-all text-slate-900" placeholder="john@example.com">
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-2">Interested Project/Course</label>
                                    <select name="title" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-purple-500 transition-all text-slate-900">
                                        <option value="General Inquiry">General Inquiry</option>
                                        <option value="Course Enrollment">Course Enrollment</option>
                                        <option value="Fees & Sponsorship">Fees & Sponsorship</option>
                                        <option value="Certifications">Certifications</option>
                                        <option value="Technical Support">Technical Support</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold text-slate-700 mb-2">Your Message</label>
                                    <textarea name="message" rows="4" required minlength="10" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:border-purple-500 transition-all text-slate-900" placeholder="How can we help you?"></textarea>
                                </div>
                                <button type="submit" class="w-full py-4 bg-[#7C3AED] text-white font-bold rounded-xl shadow-lg shadow-purple-200 hover:bg-[#6D28D9] transform hover:-translate-y-1 transition-all duration-200">
                                    Send Message Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section id="faq" class="py-20 bg-white">
            <div class="max-w-4xl mx-auto px-8 md:px-12">
                <div class="text-center mb-16 reveal reveal-up">
                    <span class="inline-block px-4 py-2 bg-purple-50 text-purple-700 text-xs font-semibold uppercase tracking-wider rounded-full border border-purple-100 mb-4">
                        Got Questions?
                    </span>
                    <h2 class="text-3xl md:text-5xl serif font-bold text-slate-900 mb-4">Frequently Asked <span class="accent-text">Questions</span></h2>
                    <p class="text-slate-500 text-lg">Everything you need to know about joining Betech Computer College.</p>
                </div>

                <div class="space-y-6">
                    <!-- Q1 -->
                    <div class="p-6 md:p-8 bg-slate-50 rounded-3xl border border-slate-100 reveal reveal-up">
                        <h4 class="text-lg font-bold text-slate-900 mb-3 flex gap-3">
                            <span class="text-purple-600">Q.</span> 
                            Do you offer evening and weekend classes?
                        </h4>
                        <p class="text-slate-600 leading-relaxed ml-7">
                            Yes, we offer flexible learning schedules, including in-person training for evening and weekend sessions, to accommodate students with busy professional or personal commitments.
                        </p>
                    </div>

                    <!-- Q2 -->
                    <div class="p-6 md:p-8 bg-slate-50 rounded-3xl border border-slate-100 reveal reveal-up">
                        <h4 class="text-lg font-bold text-slate-900 mb-3 flex gap-3">
                            <span class="text-purple-600">Q.</span> 
                            Is high-speed Wi-Fi available for students?
                        </h4>
                        <p class="text-slate-600 leading-relaxed ml-7">
                            Yes, we provide reliable high-speed 5G Wi-Fi throughout our campus, ensuring students can seamlessly engage in their studies, projects, and online research.
                        </p>
                    </div>

                    <!-- Q3 -->
                    <div class="p-6 md:p-8 bg-slate-50 rounded-3xl border border-slate-100 reveal reveal-up">
                        <h4 class="text-lg font-bold text-slate-900 mb-3 flex gap-3">
                            <span class="text-purple-600">Q.</span> 
                            Do you issue certificates after training?
                        </h4>
                        <p class="text-slate-600 leading-relaxed ml-7">
                            Absolutely. We issue industry-recognized certificates upon the successful completion of your coursework and final practical assessments.
                        </p>
                    </div>

                    <!-- Q4 -->
                    <div class="p-6 md:p-8 bg-slate-50 rounded-3xl border border-slate-100 reveal reveal-up">
                        <h4 class="text-lg font-bold text-slate-900 mb-3 flex gap-3">
                            <span class="text-purple-600">Q.</span> 
                            Can tuition fees be paid in installments?
                        </h4>
                        <p class="text-slate-600 leading-relaxed ml-7">
                            Yes, we offer flexible payment plans. You can pay in up to three installments, with a minimum deposit of 50% required before starting your classes.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>

        <script src="/static/js/animations.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
        <script type="text/javascript">
            (function() {
                emailjs.init("idmR49oaNV4cmNCAR");
                
                // Pre-select course from URL
                const urlParams = new URLSearchParams(window.location.search);
                const courseParam = urlParams.get('course');
                if (courseParam) {
                    const select = document.querySelector('select[name="title"]');
                    // Add option if it doesn't exist
                    let exists = false;
                    for (let i = 0; i < select.options.length; i++) {
                        if (select.options[i].value === courseParam) {
                            select.selectedIndex = i;
                            exists = true;
                            break;
                        }
                    }
                    if (!exists) {
                        const option = document.createElement('option');
                        option.value = courseParam;
                        option.text = courseParam;
                        option.selected = true;
                        select.add(option);
                    }
                }
            })();

            document.getElementById('contact-form').addEventListener('submit', function(event) {
                event.preventDefault();
                const btn = event.target.querySelector('button');
                const originalText = btn.innerText;
                btn.innerText = 'Sending...';
                btn.disabled = true;

                emailjs.sendForm('service_hk07qcf', 'template_9enl569', this)
                    .then(function() {
                        alert('Message Sent Successfully! We will get back to you soon.');
                        event.target.reset();
                    }, function(error) {
                        alert('Failed to send message. Please try again or contact us via WhatsApp.');
                        console.error('EmailJS Error:', error);
                    })
                    .finally(() => {
                        btn.innerText = originalText;
                        btn.disabled = false;
                    });
            });
        </script>
        <!-- Smartsupp Chatbot -->
        <%- include('partials/chatbot') %>
    </body>
</html>
