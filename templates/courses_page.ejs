<!DOCTYPE html>
<html lang="en" class="scroll-smooth" id="top">
    <head>
        <%- include('partials/head') %>
        <title>All Courses - Betech Computer College</title>
    </head>
    <body class="overflow-x-hidden antialiased bg-white">
        
        <%- include('partials/navbar') %>

        <!-- Header Section -->
        <section class="pt-24 pb-12 bg-white border-b border-slate-100">
            <div class="max-w-6xl mx-auto px-8 md:px-12 text-center">
                <span class="inline-block px-4 py-2 bg-purple-50 text-purple-700 text-xs font-semibold uppercase tracking-wider rounded-full border border-purple-100 mb-6">
                    Our Prospectus
                </span>
                <h1 class="text-4xl md:text-6xl serif font-bold mb-6 text-slate-900 leading-tight">
                    Explore Our <span class="accent-text">Full Catalogue</span>
                </h1>
                <p class="text-lg text-slate-500 max-w-2xl mx-auto leading-relaxed">
                    Choose from our wide range of industry-standard courses designed to take you from a beginner to a pro.
                </p>
            </div>
        </section>

        <!-- All Courses Section -->
        <section class="py-10 bg-white">
            <div class="max-w-6xl mx-auto px-8 md:px-12">
                <% Object.keys(categories).forEach(categoryName => { %>
                    <div class="mb-24 reveal reveal-up">
                        <div class="flex items-center gap-6 mb-12">
                            <h2 class="text-3xl serif font-bold whitespace-nowrap text-slate-900"><%= categoryName %></h2>
                            <div class="h-px w-full bg-slate-200"></div>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-10">
                            <% categories[categoryName].forEach((course, index) => { %>
                                <div id="<%= course.title.toLowerCase().replace(/[^a-z0-9]+/g, '-') %>" class="group bg-white rounded-[2rem] border border-slate-200 overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 flex flex-col md:flex-row">
                                    <!-- Image Part -->
                                    <div class="md:w-2/5 relative overflow-hidden h-64 md:h-auto">
                                        <img 
                                            src="<%= course.image %>" 
                                            alt="<%= course.title %>" 
                                            loading="lazy"
                                            decoding="async"
                                            class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
                                        >
                                        <div class="absolute inset-0 bg-white/5"></div>
                                        <div class="absolute top-4 left-4">
                                            <span class="px-3 py-1 bg-white/90 backdrop-blur-md text-[#7C3AED] text-[10px] font-bold uppercase tracking-widest rounded-full shadow-sm">
                                                <%= course.tag %>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Content Part -->
                                    <div class="md:w-3/5 p-8 md:p-10 flex flex-col">
                                        <div class="flex flex-wrap gap-2 mb-4">
                                            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest border border-slate-100 px-2 py-1 rounded bg-slate-50">
                                                <%= course.duration %>
                                            </span>
                                            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest border border-slate-100 px-2 py-1 rounded bg-slate-50">
                                                <%= course.level %>
                                            </span>
                                        </div>
                                        <h3 class="text-2xl serif font-bold mb-4 text-slate-900 group-hover:text-[#7C3AED] transition-colors leading-tight">
                                            <%= course.title %>
                                        </h3>
                                        <p class="text-slate-500 text-sm mb-8 leading-relaxed">
                                            <%= course.description %>
                                        </p>

                                        <div class="grid grid-cols-2 gap-4 mb-8">
                                            <% (course.learn || []).forEach(item => { %>
                                                <div class="flex items-center gap-2 text-xs text-slate-600 font-medium">
                                                    <svg class="w-4 h-4 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                    <%= item %>
                                                </div>
                                            <% }); %>
                                        </div>

                                        <div class="mt-auto pt-6 border-t border-slate-50 flex items-center justify-between">
                                            <a 
                                                href="/contact?course=<%= encodeURIComponent(course.title) %>"
                                                class="px-6 py-3 bg-[#7C3AED] text-white text-xs font-bold rounded-xl shadow-lg shadow-purple-200/50 hover:bg-[#6D28D9] transition-all"
                                            >
                                                Enroll in Course
                                            </a>
                                            <button 
                                                onclick="openCourseDetails('<%= course.title %>')"
                                                class="text-xs font-bold text-slate-400 hover:text-[#7C3AED] transition-colors"
                                            >
                                                Syllabus Details
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>

        <%- include('partials/footer') %>

        <!-- Course Details Modal -->
        <%- include('partials/course_details_modal') %>

        <!-- Smartsupp Chatbot -->
        <%- include('partials/chatbot') %>

        <script src="/static/js/animations.js"></script>
    </body>
</html>
